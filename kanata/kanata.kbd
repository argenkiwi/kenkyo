 (j    ) (t! charmod 7 rctl)
 (  k  ) (t! charmod 8 rsft)
 (    l) (t! charmod 9 lalt)
 (j k  ) kp/
 (  k l) kp*
 (j   l) .
)

(defchords fbl $chord-timeout
  (x  ) (t! charmod ` ralt)
  (  c) -
  (x c) tab
)

(defchords fbr $chord-timeout
  (,  ) [
  (  .) (t! charmod ] ralt)
  (, .) ret
)

(deflayermap (fumbol)
